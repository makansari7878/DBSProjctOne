<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DBSProjctOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mycolor</item>
        <item name="colorPrimaryVariant">#E91E63</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#34DC37</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="mystyle" parent="Theme.DBSProjctOne" >
        <item name="android:textColor">@color/mycolor</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="child" parent="mystyle">
        <item name="android:textColor">#f00</item>
    </style>
</resources>